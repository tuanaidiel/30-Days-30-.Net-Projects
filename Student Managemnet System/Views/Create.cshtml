@model StudentManagementSystem.Models.Student

@{
    ViewData["Title"] = "Add Student";
}

<h1>Add New Student</h1>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label for="Name">Name:</label>
        <input type="text" id="Name" name="Name" class="form-control" value="@Model?.Name" required />
        @if (ViewData.ModelState["Name"]?.Errors.Any())
        {
            <span class="text-danger">@ViewData.ModelState["Name"].Errors.First().ErrorMessage</span>
        }
    </div>

    <div class="form-group">
        <label for="Age">Age:</label>
        <input type="number" id="Age" name="Age" class="form-control" value="@Model?.Age" min="1" required />
        @if (ViewData.ModelState["Age"]?.Errors.Any())
        {
            <span class="text-danger">@ViewData.ModelState["Age"].Errors.First().ErrorMessage</span>
        }
    </div>

    @if (ViewData.ModelState[""]?.Errors.Any())
    {
        <div class="text-danger">@ViewData.ModelState[""].Errors.First().ErrorMessage</div>
    }

    <button type="submit" class="btn btn-primary">Submit</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}